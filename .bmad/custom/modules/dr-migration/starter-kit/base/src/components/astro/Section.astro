---
/**
 * Section.astro
 * Componente de seção com container
 */

interface Props {
  id?: string;
  background?: "default" | "surface" | "dark" | "gradient";
  padding?: "sm" | "md" | "lg" | "xl";
  containerWidth?: "sm" | "md" | "lg" | "xl" | "full";
  class?: string;
}

const {
  id,
  background = "default",
  padding = "lg",
  containerWidth = "lg",
  class: className = "",
} = Astro.props;

const backgrounds = {
  default: "bg-background",
  surface: "bg-surface",
  dark: "bg-secondary text-white",
  gradient: "bg-gradient-to-br from-primary/5 via-background to-accent/5",
};

const paddings = {
  sm: "py-8",
  md: "py-12",
  lg: "py-16",
  xl: "py-24",
};

const containers = {
  sm: "max-w-2xl",
  md: "max-w-4xl",
  lg: "max-w-6xl",
  xl: "max-w-7xl",
  full: "max-w-full",
};

const sectionClasses = [backgrounds[background], paddings[padding], className]
  .filter(Boolean)
  .join(" ");

const containerClasses = ["mx-auto px-4", containers[containerWidth]].join(" ");
---

<section id={id} class={sectionClasses}>
  <div class={containerClasses}>
    <slot />
  </div>
</section>
