---
/**
 * Thank You Page - DONATE Preset
 * Confirmação de pagamento
 */
import BaseLayout from "@layouts/BaseLayout.astro";
import Section from "@components/astro/Section.astro";
import Card from "@components/astro/Card.astro";
import Button from "@components/astro/Button.astro";

const pageTitle = "Obrigado pela Contribuição!";
const pageDescription = "Sua contribuição foi recebida com sucesso";
---

<BaseLayout title={pageTitle} description={pageDescription} noIndex={true}>
  <Section background="gradient" padding="xl">
    <div class="max-w-2xl mx-auto text-center">
      <!-- Success Icon -->
      <div class="w-24 h-24 bg-success/20 rounded-full flex items-center justify-center mx-auto mb-6">
        <svg class="w-12 h-12 text-success" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7"></path>
        </svg>
      </div>

      <!-- Title -->
      <h1 class="text-4xl font-bold text-secondary mb-4">
        Muito Obrigado!
      </h1>

      <!-- Message -->
      <p class="text-xl text-text-muted mb-8">
        Sua contribuição foi recebida com sucesso. Você faz parte de algo especial!
      </p>

      <!-- Confirmation Card -->
      <Card variant="elevated" class="text-left mb-8">
        <h2 class="font-semibold text-secondary mb-4 text-center">
          Detalhes da Contribuição
        </h2>
        <div class="space-y-3">
          <div class="flex justify-between py-2 border-b border-border">
            <span class="text-text-muted">Status</span>
            <span class="text-success font-medium flex items-center gap-1">
              <svg class="w-4 h-4" fill="currentColor" viewBox="0 0 20 20">
                <path fill-rule="evenodd" d="M10 18a8 8 0 100-16 8 8 0 000 16zm3.707-9.293a1 1 0 00-1.414-1.414L9 10.586 7.707 9.293a1 1 0 00-1.414 1.414l2 2a1 1 0 001.414 0l4-4z" clip-rule="evenodd"></path>
              </svg>
              Confirmado
            </span>
          </div>
          <div class="flex justify-between py-2 border-b border-border">
            <span class="text-text-muted">Valor</span>
            <span id="confirmed-value" class="font-medium">R$ 47,00</span>
          </div>
          <div class="flex justify-between py-2 border-b border-border">
            <span class="text-text-muted">Método</span>
            <span class="font-medium">PIX</span>
          </div>
          <div class="flex justify-between py-2">
            <span class="text-text-muted">Data</span>
            <span id="confirmation-date" class="font-medium">-</span>
          </div>
        </div>
      </Card>

      <!-- Next Steps -->
      <Card class="bg-surface text-left mb-8">
        <h3 class="font-semibold text-secondary mb-3">Próximos Passos</h3>
        <ul class="space-y-2 text-text-muted">
          <li class="flex items-start gap-2">
            <span class="text-primary">1.</span>
            <span>Você receberá um email de confirmação em breve</span>
          </li>
          <li class="flex items-start gap-2">
            <span class="text-primary">2.</span>
            <span>Acompanhe nosso conteúdo exclusivo</span>
          </li>
          <li class="flex items-start gap-2">
            <span class="text-primary">3.</span>
            <span>Compartilhe com amigos e ajude nossa causa</span>
          </li>
        </ul>
      </Card>

      <!-- Social Share -->
      <div class="mb-8">
        <p class="text-text-muted mb-4">Compartilhe e ajude mais pessoas:</p>
        <div class="flex justify-center gap-4">
          <a
            href="#"
            class="w-10 h-10 bg-[#25D366] rounded-full flex items-center justify-center text-white hover:opacity-80 transition"
            title="WhatsApp"
          >
            <svg class="w-5 h-5" fill="currentColor" viewBox="0 0 24 24">
              <path d="M17.472 14.382c-.297-.149-1.758-.867-2.03-.967-.273-.099-.471-.148-.67.15-.197.297-.767.966-.94 1.164-.173.199-.347.223-.644.075-.297-.15-1.255-.463-2.39-1.475-.883-.788-1.48-1.761-1.653-2.059-.173-.297-.018-.458.13-.606.134-.133.298-.347.446-.52.149-.174.198-.298.298-.497.099-.198.05-.371-.025-.52-.075-.149-.669-1.612-.916-2.207-.242-.579-.487-.5-.669-.51-.173-.008-.371-.01-.57-.01-.198 0-.52.074-.792.372-.272.297-1.04 1.016-1.04 2.479 0 1.462 1.065 2.875 1.213 3.074.149.198 2.096 3.2 5.077 4.487.709.306 1.262.489 1.694.625.712.227 1.36.195 1.871.118.571-.085 1.758-.719 2.006-1.413.248-.694.248-1.289.173-1.413-.074-.124-.272-.198-.57-.347m-5.421 7.403h-.004a9.87 9.87 0 01-5.031-1.378l-.361-.214-3.741.982.998-3.648-.235-.374a9.86 9.86 0 01-1.51-5.26c.001-5.45 4.436-9.884 9.888-9.884 2.64 0 5.122 1.03 6.988 2.898a9.825 9.825 0 012.893 6.994c-.003 5.45-4.437 9.884-9.885 9.884m8.413-18.297A11.815 11.815 0 0012.05 0C5.495 0 .16 5.335.157 11.892c0 2.096.547 4.142 1.588 5.945L.057 24l6.305-1.654a11.882 11.882 0 005.683 1.448h.005c6.554 0 11.89-5.335 11.893-11.893a11.821 11.821 0 00-3.48-8.413z"/>
            </svg>
          </a>
          <a
            href="#"
            class="w-10 h-10 bg-[#1877F2] rounded-full flex items-center justify-center text-white hover:opacity-80 transition"
            title="Facebook"
          >
            <svg class="w-5 h-5" fill="currentColor" viewBox="0 0 24 24">
              <path d="M24 12.073c0-6.627-5.373-12-12-12s-12 5.373-12 12c0 5.99 4.388 10.954 10.125 11.854v-8.385H7.078v-3.47h3.047V9.43c0-3.007 1.792-4.669 4.533-4.669 1.312 0 2.686.235 2.686.235v2.953H15.83c-1.491 0-1.956.925-1.956 1.874v2.25h3.328l-.532 3.47h-2.796v8.385C19.612 23.027 24 18.062 24 12.073z"/>
            </svg>
          </a>
        </div>
      </div>

      <!-- CTA -->
      <Button href="/" variant="outline">
        Voltar ao Início
      </Button>
    </div>
  </Section>

  <!-- Track Purchase -->
  <script>
    import { fbEvents, trackConversion } from "@lib/tracking";

    // Get value from URL or localStorage
    const urlParams = new URLSearchParams(window.location.search);
    const value = parseFloat(urlParams.get("value") || "47");

    // Track purchase
    trackConversion({
      value,
      orderId: urlParams.get("order_id") || undefined,
      productName: "Contribuição",
    });

    // Update UI
    document.getElementById("confirmed-value")!.textContent =
      new Intl.NumberFormat("pt-BR", { style: "currency", currency: "BRL" }).format(value);

    document.getElementById("confirmation-date")!.textContent =
      new Date().toLocaleDateString("pt-BR");
  </script>
</BaseLayout>
